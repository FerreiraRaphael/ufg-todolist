{
  "name": "express-example",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "8.4.0"
  },
  "scripts": {
    "start": "cross-env DEBUG=express-sequelize node ./bin/www",
    "dev": "cross-env DEBUG=express-sequelize node --inspect ./bin/www",
    "migrate": "sequelize db:migrate",
    "lint": "eslint **/*.js",
    "test": "cross-env NODE_ENV=test mocha routes/*.spec.js",
    "test:debug": "cross-env NODE_ENV=test mocha debug routes/*.spec.js",
    "test:coverage": "cross-env NODE_ENV=test istanbul --config=config/istanbul.yml cover node_modules/mocha/bin/_mocha -- -R spec routes/*.spec.js",
    "report:coverage": "cross-env NODE_ENV=test istanbul report cobertura"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.15.2",
    "codacy-coverage": "^2.0.3",
    "cookie-parser": "^1.4.3",
    "debug": "~2.2.0",
    "express": "^4.14.0",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.1.0",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.7.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^6.1.0",
    "sequelize": "^3.23.6",
    "sequelize-cli": "^3.0.0",
    "serve-favicon": "~2.3.0",
    "spec-xunit-file": "0.0.1-3",
    "sqlite3": "^3.0.8"
  },
  "devDependencies": {
    "bluebird": "^3.4.1",
    "cross-env": "^3.1.3",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "expect.js": "^0.3.1",
    "husky": "^0.14.3",
    "istanbul": "^1.1.0-alpha.1",
    "lint-staged": "^4.3.0",
    "mocha": "^3.0.2",
    "prettier": "^1.7.4",
    "supertest": "^2.0.0"
  },
  "lint-staged": {
    "linters": {
      "*.{json, css}": [
        "prettier --write",
        "git add"
      ],
      "*.{js, jsx}": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  }
}
